#: import hex kivy.utils.get_color_from_hex

<Item@MDCard>:
    elevation: 10
    border_radius: 20
    radius: [15]
    size_hint_y: None
    padding: [20,20]

    MDBoxLayout:
    
        orientation: 'vertical'
        spacing: 10
        MDLabel:
            text: "Accept Advice."
            text_color: hex('#363636')
            font_size: '16sp'
            font_name: 'fonts/poppins/poppins-bold.ttf'

        MDLabel:
            text: "24 April 2022"
            theme_text_color: 'Secondary'

<CardFrase>
    elevation: 6
    border_radius: 20
    radius: [15]
    
    # size: '280dp', '450dp'
    # pos_hint: {'center_x': 0.5,'center_y': 0.5}
    padding: [5, 0]

    MDBoxLayout:
        orientation: 'vertical'
        MDBoxLayout:
            padding: [20,20]

            orientation: 'vertical'
            MDLabel:
                text: 'Advice'
                theme_text_color: 'Secondary'
                # font_size: '22sp'
                font_name: 'fonts/poppins/poppins-bold.ttf'
                size_hint_y: None
                height: self.texture_size[1]
            
            MDSeparator:
                height: '1dp'
            
            # MDBoxLayout:
            #     orientation: 'vertical'
            #     size_hint_y: .1


            MDLabel:
             
                id: lb_frase
                size: self.size
                text: root.frase
                font_size: '22sp'
                font_name: 'fonts/poppins/poppins-extralight.ttf'
                text_align: 'center'
              
            
            
            

        MDGridLayout:
            cols: 3
            rows: 2
            adaptive_height: True
            
                
            canvas:
                Rectangle:
                    size: self.size[0], self.size[1]
                    pos: self.pos
                # width: dp(40)
                
            
            AnchorLayout:
                MDIconButton:
                    icon: 'content-copy'
            AnchorLayout:
                MDIconButton:
                    icon: 'book-refresh'
                    on_release: root.gerar_frase()
            AnchorLayout:
                MDIconButton:
                    icon: 'share-variant-outline'        

<Inicio>:
    
    MDBoxLayout:
        orientation: 'vertical'
        size_hint_y: .1
    MDBoxLayout: #Box Pai
        orientation: 'vertical'
        padding: [20, 0]
        canvas.before:
            Color: 
                rgba: hex('#f5f5f5')
            RoundedRectangle:
                size: self.size[0], self.size[1]
                pos: self.pos
                radius: [dp(10), dp(10)]

        

        MDBoxLayout: #Filho1
        
            padding: [0,20]
            spacing: 10
            orientation: 'vertical'
            
            
            
            AnchorLayout:
                CardFrase:

        AnchorLayout: #Filho2
            # size_hint_x: None
            orientation: 'vertical'
            size_hint_y: .2
            MDLabel:
                text: "Recent"
                font_size: '18sp'
                font_name: 'fonts/poppins/poppins-semibold.ttf'
                theme_text_color: 'Secondary'

        MDBoxLayout: #Filho3
        
            # canvas:
            #     Color: 
            #         rgba: hex('#987457')
                
            
            #     RoundedRectangle:
            #         size: self.size[0], self.size[1]
            #         pos: self.pos
            #         radius: [dp(10), dp(10)]
            # padding: [20,20]
            spacing: 10
            size_hint_y: None
            orientation: 'vertical'
            
            ScrollView:

                MDList:

                    Item:
                    # Item:

    MDBoxLayout:
        orientation: 'vertical'
        size_hint_y: .1
                
                            
                        
        