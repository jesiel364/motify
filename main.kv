#: import hex kivy.utils.get_color_from_hex
#:import Clipboard kivy.core.clipboard.Clipboard
<Lista>
    spacing:5

<Item>
    id: root.frase_id
    elevation: 10
    border_radius: 20
    radius: [15]
    size_hint_y: None
    padding: [20,5]
    on_release: root.carregar_recente(root.frase_id)

    MDBoxLayout:
        orientation: 'vertical'
        # size_hint_y: .1
        # spacing: 10
        MDLabel:
            text: root.text
            text_color: hex('#363636')
            font_size: '16sp'
            font_name: 'fonts/poppins/poppins-bold.ttf'


        MDLabel:
            text: root.date
            theme_text_color: 'Secondary'

<CardFrase>
    elevation: 6
    border_radius: 20
    radius: [15]
    
    # size: '280dp', '450dp'
    # pos_hint: {'center_x': 0.5,'center_y': 0.5}
    padding: [5, 0]
    size_hint_y:.8
    size_hint_x: .8
    

    MDBoxLayout:
        orientation: 'vertical'
        MDBoxLayout:
            padding: [20,20]
        
            orientation: 'vertical'
            MDLabel:
                text: 'Advice'
                theme_text_color: 'Secondary'
                font_size: '20sp'
                font_name: 'fonts/poppins/poppins-bold.ttf'
                size_hint_y: None
                height: self.texture_size[1]
            
            MDSeparator:
                height: '1dp'
            
            # MDBoxLayout:
            #     orientation: 'vertical'
            #     size_hint_y: .1


            MDLabel:
             
                id: lb_frase
                size: self.size
                text: root.frase
                font_size: '22sp'
                font_name: 'fonts/poppins/poppins-extralight.ttf'
                text_align: 'center'
              
            
            
            

        MDGridLayout:
            cols: 3
            rows: 2
            adaptive_height: True
            
                
            canvas:
                Rectangle:
                    size: self.size[0], self.size[1]
                    pos: self.pos
                # width: dp(40)
                
            
            AnchorLayout:
                MDIconButton:
                    icon: 'content-copy'
                    on_release: app.copiar() 
            AnchorLayout:
                MDIconButton:
                    icon: 'book-refresh'
                    on_release: root.gerar_frase()
            AnchorLayout:
                MDIconButton:
                    icon: 'share-variant-outline'        

<Inicio>:

    MDBottomNavigation:
        panel_color: hex("#eeeaea")
        selected_color_background: hex("#97ecf8")
        text_color_active: 0, 0, 0, 1

        MDBottomNavigationItem:
            name: 'screen 1'
            text: 'Advice'
            icon: 'book-outline'
            badge_icon: "numeric-10"
            
            AnchorLayout:
                CardFrase:

            

        MDBottomNavigationItem:
            name: 'screen 2'
            text: 'Favorits'
            icon: 'heart'
            badge_icon: "numeric-5"

            MDBoxLayout: #Filho2
                # size_hint_x: None
                orientation: 'vertical'
              
                spacing:30
                pading: [0, 20]
                MDLabel:
                    size_hint_y:.1
                    text: "Recent"
                    font_size: '18sp'
                    font_name: 'fonts/poppins/poppins-semibold.ttf'
                    theme_text_color: 'Secondary'
    
            	MDBoxLayout: #Filho3
                	spacing: 10
                	size_hint_y: .9
                	orientation: 'vertical'
                	ScrollView:
                    	Lista:

        MDBottomNavigationItem:
            name: 'screen 3'
            text: 'Settings'
            icon: 'cog-box'

            MDBoxLayout:
                orientation: "vertical"
                
                MDBoxLayout:
                   
                    MDLabel:
                        text: "Dark Mode"
    
                    MDSwitch:
                MDBoxLayout:
                    MDLabel:
                        text: "Example"
                        
                    MDSwitch:
                      
                MDRaisedButton:
                    text: "Save"
                   
                   
                    
                            
                        
        