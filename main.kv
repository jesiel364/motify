#: import hex kivy.utils.get_color_from_hex

<CardFrase>
    elevation: 6
    border_radius: 20
    radius: [15]
    # size_hint: None, None
    # size: '280dp', '450dp'
    # pos_hint: {'center_x': 0.5,'center_y': 0.5}
    padding: [5, 0]

    MDBoxLayout:
        orientation: 'vertical'
        MDBoxLayout:
            padding: [5,20]

            orientation: 'vertical'
            MDLabel:
                text: 'Advice'
                theme_text_color: 'Secondary'
                # font_size: '22sp'
                font_name: 'fonts/poppins/poppins-bold.ttf'
                size_hint_y: None
                height: self.texture_size[1]
            
            MDSeparator:
                height: '1dp'


            MDLabel:
                id: lb_frase
                text: root.frase
                font_size: '22sp'
                font_name: 'fonts/poppins/poppins-extralight.ttf'
            
            

        MDGridLayout:
            cols: 3
            rows: 1
            adaptive_height: True
                
            canvas:
                Rectangle:
                    size: self.size[0], self.size[1]
                    pos: self.pos
                # width: dp(40)
                
            AnchorLayout:
                MDIconButton:
                    icon: 'content-copy'
            AnchorLayout:
                MDIconButton:
                    icon: 'book-refresh'
                    on_release: root.gerar_frase()
            AnchorLayout:
                MDIconButton:
                    icon: 'share-variant-outline'


        
            
        

<Inicio>:
    MDBoxLayout:
        orientation: 'vertical'
        MDBoxLayout:
        
            padding: [20,20]
            spacing: 10
            orientation: 'vertical'

            canvas:
                Color: 
                    rgba: hex('#f5f5f5')
                
            
                RoundedRectangle:
                    size: self.size[0], self.size[1]
                    pos: self.pos
                    radius: [dp(10), dp(10)]
            
            AnchorLayout:
                CardFrase:

        MDBoxLayout:
            size_hint: None, .5
            orientation: 'vertical'
            MDBoxLayout:
                orientation: 'vertical'
                MDLabel:
                    text: "Recent"

            MDBoxLayout:
                orientation: 'vertical'
                ScrollView:
                    
                    MDLabel:
                        text: "General and surprising."
                            
                        
            
   

            